<div class="container">
<h1>Manage your apartments</h1>

<div class="row">
    <div class="card-deck">
    <% @appartments.each do |a| %>
    <div class="col-sm-6 col-md-4 col-lg-3 addedmargin">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= a.address %></h5>
                <ul>
                    <li>Apartment number: <%= a.appartmentnr %></li>
                    <li>Number of habitants: <%= a.habitant %></li>
                </ul>
                <%= link_to 'View Apartment', appartment_path(a), {:class => "btn btn-primary"} %>
            </div>
        </div>
        </div>
    <% end %>
    </div>
</div>
</div>